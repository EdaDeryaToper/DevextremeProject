@using Newtonsoft.Json
@model IEnumerable<Person>
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}
<h1>Bootstrap</h1>
<div class="container">
    <div class="row">
        
        @foreach (var person in Model)
        {
            <div class="col-sm-4">
                <div class="card" style="width: 18rem;">

                    <img src="@Url.Content(@person.Image)" class="card-img-top" alt="...">
                    <div class="card-body">
                        <h5 class="card-title">@person.FirstName @person.LastName</h5>
                        <p class="card-text">@person.BirthDate</p>
                        <p class="card-text">@person.Email</p>
                        <p class="card-text">@person.Phone</p>
                        <p class="card-text">@person.Notes</p>
                        <a href="#" class="btn btn-primary">Go somewhere</a>
                    </div>
                </div>
            </div>
           

        }
    </div>
</div>

<hr/>
<div class="demo-container">
    <div id="container">
        <h1>DevExtreme</h1>
        <ul id="employees"></ul>
        <div id="popup"></div>
    </div>
</div>
<script>
    var employees = @Html.Raw(JsonConvert.SerializeObject(Model))
</script>




<script src="js/custom/person.js"></script>
